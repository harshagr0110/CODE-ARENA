generator client {
  provider = "prisma-client-js"
  skipEngine = true
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id           String   @id
  clerkId      String   @unique @map("clerk_id")
  username     String   @unique
  email        String
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  submissions      Submission[]
  createdQuestions Question[]        @relation("QuestionCreator")
  hostedRooms      Room[]            @relation("RoomHost")

  @@map("users")
}

model Question {
  id                    String   @id @default(uuid())
  title                 String
  description           String
  difficulty            String   @default("medium") // easy, medium, hard
  topics                String[] @default([]) // Array of topics: arrays, strings, dp, trees, graphs, etc.
  testCases             Json     @map("test_cases") // Array of {input, expectedOutput, explanation?}
  createdBy             String   @map("created_by")

  // Relations
  creator       User         @relation("QuestionCreator", fields: [createdBy], references: [id])
  submissions   Submission[]
  games         Game[]

  @@map("questions")
}

model Submission {
  id              String   @id @default(uuid())
  gameId          String   @map("game_id")
  userId          String   @map("user_id")
  questionId      String   @map("question_id")
  code            String
  language        String   @default("javascript")
  isCorrect       Boolean  @default(false) @map("is_correct")
  feedback        String?  @map("feedback")
  executionTime   Int?     @default(0) @map("execution_time") // in milliseconds
  submittedAt     DateTime @default(now()) @map("submitted_at")

  // Relations
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  game            Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  question        Question @relation(fields: [questionId], references: [id], onDelete: Restrict)

  @@index([gameId])
  @@index([userId])
  @@index([questionId])
  @@map("submissions")
}

model Room {
  id           String    @id @default(uuid())
  hostId       String    @map("host_id")
  name         String?
  joinCode     String    @unique @map("join_code")
  maxPlayers   Int       @default(4) @map("max_players")
  isActive     Boolean   @default(true) @map("is_active") // true = active (waiting to start or in progress), false = finished/deleted
  privacy      String    @default("public") // public or private
  participants Json      @default("[]") // Array of {id, username}
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  // Relations
  host         User   @relation("RoomHost", fields: [hostId], references: [id], onDelete: Cascade)
  games        Game[] @relation("RoomGames")

  @@index([hostId])
  @@index([joinCode])
  @@index([isActive])
  @@map("rooms")
}

model Game {
  id           String    @id @default(uuid())
  roomId       String    @map("room_id")
  winnerId     String?   @map("winner_id")
  difficulty   String    @default("medium")
  questionId   String    @map("question_id")
  startedAt    DateTime  @default(now()) @map("started_at")
  durationSeconds Int    @default(300) @map("duration_seconds")
  endedAt      DateTime? @map("ended_at")
  createdAt    DateTime  @default(now()) @map("created_at")

  // Relations
  room         Room        @relation("RoomGames", fields: [roomId], references: [id], onDelete: Cascade)
  question     Question    @relation(fields: [questionId], references: [id], onDelete: Restrict)
  submissions  Submission[]

  @@index([roomId])
  @@index([questionId])
  @@map("games")
}


